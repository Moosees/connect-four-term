{
  "compilerOptions": {
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "nodenext",
    "target": "es6",
    "module": "nodenext",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declarationDir": "../dist",
    "outDir": "../dist",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./**/*.ts", "../typings/inquirer-interactive-list-prompt.d.ts"],
  "exclude": ["node_modules"]
}
